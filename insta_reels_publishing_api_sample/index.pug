doctype
html
  head
    title Instagram Reels Publishing API Sample App
    link(rel='stylesheet', href='/style.css')
  body
    header
      h1 Instagram Reels Publishing API Sample App
    .button-group
      button(onclick="location.href='/login'") Log In with Facebook
      button(onclick="location.href='/logout'") Log Out
    if(error)
      .alert-error
        span.closebtn(onclick="this.parentElement.style.display='none';") &times;
        |   Error Occured - #{error}!
